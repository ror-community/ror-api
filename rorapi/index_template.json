                      }
                    }
                  },
                  "geonames_admin2": {
                    "properties": {
                      "ascii_name": {
                        "type": "keyword"
                      },
                      "name": {
                        "type": "keyword"
                      },
                      "code": {
                        "type": "keyword"
                      }
                    }
                  },
                  "license": {
                    "properties": {
                      "attribution": {
                        "type": "text"
                      },
                      "license": {
                        "type": "text"
                      }
                    }
                  }
                }
              }
            }
          },
          "relationships": {
            "properties": {
              "type":  {
                "type": "keyword"
                },
              "label": {
                "type": "keyword"
              },
              "id": {
                "type": "keyword"
                }
              }
          },
          "external_ids": {
